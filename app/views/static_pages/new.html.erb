<%= render 'breadcrumb' %>
<script>
var sections = $('.section'),
    links = $('.link'),
    lis = $('.links > li');

$(window).scroll(function() {
    var currentPosition = $(this).scrollTop();
    links.removeClass('selected');
    lis.removeClass('active-slide');
    
    sections.each(function() {
        var top = $(this).offset().top,
            bottom = top + $(this).height();
        
        if (currentPosition >= top && currentPosition <= bottom) {
            var link = $('a[href="#' + this.id + '"]');
            link.addClass('selected');
            link.parent().addClass('active-slide');
        }
    });
    
});</script>

<section id="section1" class="section clear" data-spy="scroll">
  <div class="page-wrapper">
    <%= render 'letter' %>
  </div>
</section>

<section id="section2" class="section clear" data-spy="scroll">
  <div class="page-wrapper">
    <%= render 'address' %>
  </div>
</section>

<section id="section3" class="section clear" data-spy="scroll">
  <div class="page-wrapper">
    <%= render 'send' %>
  </div>
</section>
