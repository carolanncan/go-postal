section
  p#notice = notice
  - provide(:title, @user.name)

  section.sidebar
    .user-info
      .gravatar
        = gravatar_for @user
      .username
        = @user.name
        .email
          = @user.email
      .edit
        = link_to edit_user_path(@user) do
          | Edit
          i.fa.fa-pencil

  section.tabs
    = bettertabs :simpletabs do |tab|
      = tab.link :tab1, 'Address Book' do
        p Addresses
      = tab.link :tab2, 'Letters' do
        ul
          li Letter to Grandma
          li Letter to Mary
          li Letter to Papa Joe
